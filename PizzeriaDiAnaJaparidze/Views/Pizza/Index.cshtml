
@{
    Layout = "_BaseLayout";
}
@model List<Pizza>

<div class="container">

    @*inizio delle cards------------------------------------*@
    <a class="btn btn-primary"
       href="@Url.Action("Create", "Pizza")">
        Aggiungi Nuovo Articolo
    </a>

    <div class="p-5 row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach(Pizza elemento in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img style="aspect-ratio:4/3" src="@elemento.Image" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">@elemento.Title</h5>
                        <p class="card-text">@elemento.Description</p>

                        <button class="btn btn-warning btn-sm" href="@Url.Action("Details", "Pizza", new { id = elemento.Id })"> Details </button>

                        <button class="btn btn-warning btn-sm modifyBtn" href="@Url.Action("Update", "Pizza", new { id = elemento.Id })"> Modify </button>

                        <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@elemento.Id" method="post" class="btn btn-warning btn-sm"><button class="btn btn-warning btn-sm" type="submit"> Delete </button></form>
                    </div>

                </div>
            </div>
        } 
       
    </div>

    @*inizio delle cards------------------------------------*@
</div>

